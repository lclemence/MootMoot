<h1>Listing galleries</h1>

<table  class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @galleries.each do |gallery| %>
  <tr>
    <td><%= gallery.name %></td>
    <td><%= link_to 'Show', gallery, :class => 'btn btn-primary'  %></td>
    <td><%= link_to 'Edit', edit_gallery_path(gallery), :class => 'btn btn-primary'  %></td>
    <td><%= link_to 'Destroy', gallery, :confirm => 'Are you sure?', :method => :delete , :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

